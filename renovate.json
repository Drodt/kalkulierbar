{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "dev"
  ],
  "labels": [
    "renovate"
  ],
  "assignees": [
    "JuliusHenke"
  ],
  "rebaseWhen": "behind-base-branch",
  "automergeType": "branch",
  "stabilityDays": 3,
  "prCreation": "immediate",
  "schedule": [
    "before 9am on Saturday"
  ],
  "packageRules": [
    {
      "description": "Group all non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "non-major"
    },
    {
      "description": "Group major dev updates",
      "matchUpdateTypes": [
        "major"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "major-dev"
    },
    {
      "matchPackageNames": "preact-cli",
      "allowedVersions": "<=3.0.5"
    }
  ]
}
