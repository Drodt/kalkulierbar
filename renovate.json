{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "dev"
  ],
  "labels": [
    "renovate"
  ],
  "assignees": [
    "JuliusHenke"
  ],
  "rebaseWhen": "behind-base-branch",
  "automergeType": "branch",
  "stabilityDays": 3,
  "prCreation": "immediate",
  "schedule": [
    "before 9am on Saturday"
  ],
  "packageRules": [
    {
      "description": "Group all non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "non-major"
    },
    {
      "description": "Group major dev updates",
      "matchUpdateTypes": [
        "major"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "major-dev"
    },
    {
      "matchPackageNames": "preact-cli",
      "allowedVersions": "<=3.0.5"
    },
    {
      "matchPackageNames": ["@material/radio", "@material/switch"],
      "allowedVersions": "<5.0.0"
    },
    {
      "matchPackageNames": ["@types/node", "node"],
      "allowedVersions": "^14"
    },
    {
      "matchPackageNames": ["css-loader", "sass-loader"],
      "enabled": false
    }
  ]
}
